{{!--
Re-usable card for linking to posts
--}}

<article class="gh-card {{post_class}}">

    <a class="gh-card-link" href="{{url}}">
        
        <div class="gh-card-content">
            {{#if feature_image}}
            <img class="gh-card-image"
                srcset="{{img_url feature_image size="xs"}} 379w,
                        {{img_url feature_image size="s"}} 458w,
                        {{img_url feature_image size="m"}} 853w,"

                src="{{img_url feature_image size="s"}}"
                sizes="(max-width: 400px) 379px, 458x"
                width="458" height="258"
                    
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                 {{#unless @first}} loading="lazy"{{/unless}}
            />
        {{/if}}

        
           <div class="gh-card-box">
               
            <span class="gh-card-meta"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time> <span class="bull">&bull;</span> {{reading_time}}</span>
            <h2 class="gh-card-title">{{title}}</h2>
            <p>{{excerpt}}</p>
                <div class="gh-tag-box">
               {{#if tags}}
                        {{#foreach tags limit="5"}}
                        <a href="{{url}}" title="{{name}}" class="gh-card-tag"> {{name}}</a>
                        {{#unless @last}}+{{/unless}} 
                        {{/foreach}}
                {{/if}}
                </div><a  href="{{url}}">
            <strong>Read more</strong></a>
            
            </div>
            
        </div>
        
    </a>
</article>
